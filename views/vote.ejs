<% include partials/header %>
<div class="container">
  <header class="jumbotron">
    <div class="container">
      <h2>Welcome to the cat pages of <em> <strong>Atelier</strong></em></h2>
      <p>vote for your favorite cats</p>
      <p><a href="/score">click Here</a> to see the scores of the cats</p>
    </div>
  </header>
  <div class="row" style="display:flex; flex-wrap: wrap;">
    <div class="col-lg-12">
      <h3>The List of cutest cats in Atelier!</h3>
      <!-- foreach loop for the cat images -->
      <% data["images"].forEach(function(catsImg){ %>
      <div class="col-sm-6 col-md-3">
        <div class="thumbnail">
          <img style="height:200px; width:220px;" src=" <%= catsImg.url %> " alt="">
          <div class="caption">
            <h4> <strong>Id-no:</strong>
              <span>
                <%= catsImg.id %>
              </span>
            </h4>
            <div class="d-inline-block">
              <form action="/vote" method="POST">
                <input id="vote" type="number" min="1" max="5" value="1" name="addVote">
                <button>Vote</button>
              </form>
            </div>
          </div>
        </div>
      </div>
      <% }) %>
    </div>
  </div>
</div>